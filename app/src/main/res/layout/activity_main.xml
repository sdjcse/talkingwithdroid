<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sdj.firstapp.MainActivity">


    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/name" />
    <TextView
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/age" />
    <TextView
        android:text="Patient ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/age"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/patid" />
    <TextView
        android:text="Sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/patid"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/sex" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/inputname"
        android:selectAllOnFocus="true"
        android:textColorLink="?attr/actionMenuTextColor"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/patid"
        android:layout_toRightOf="@+id/patid"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAlignment="center"
        android:text=""
        android:ems="5"
        android:id="@+id/inputage"
        android:selectAllOnFocus="true"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_alignStart="@+id/inputpatid"
        android:layout_alignLeft="@+id/inputpatid"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/inputpatid"
        android:layout_alignEnd="@+id/inputname"
        android:layout_alignRight="@+id/inputname">

        <RadioButton
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputpatid"
            android:layout_toRightOf="@id/sex"
            android:layout_marginTop="21dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/male" />

        <RadioButton
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputpatid"
            android:layout_toRightOf="@id/male"
            android:layout_marginTop="21dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/female" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sex"
        android:text="View Heartbeat"
        android:layout_marginTop="10dp"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:id="@+id/start" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAlignment="center"
        android:text=""
        android:ems="5"
        android:id="@+id/inputpatid"
        android:textColorLink="?attr/actionMenuTextColor"
        android:selectAllOnFocus="true"
        android:layout_alignTop="@+id/patid"
        android:layout_alignEnd="@+id/start"
        android:layout_alignRight="@+id/start"/>
</RelativeLayout>
